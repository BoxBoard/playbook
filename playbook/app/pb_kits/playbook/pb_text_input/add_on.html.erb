<%= pb_rails("flex", props: { classname: "add-on-#{alignment} #{border_class}", vertical: "center"}) do %>
  <% if alignment == "left" %>
    <%= pb_rails("card", props: {classname: "add-on-card card-left-aligned"}) do %>
      <%= pb_rails("icon", props: { icon: icon, classname: "add-on-icon", fixed_width: false }) %>
    <% end %>
    <%= content %>
  <% elsif alignment == "right" %>
    <%= content %>
    <%= pb_rails("card", props: {classname: "add-on-card card-right-aligned"}) do %>
      <%= pb_rails("icon", props: { icon: icon, classname: "add-on-icon", fixed_width: false }) %>
    <% end %>
  <% end %>
<% end %>
