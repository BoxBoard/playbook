<%= pb_rails("flex", props: {classname: "flex-container", vertical: "stretch"}) do %>
  <% if alignment == "right" %>
    <%= content %>
    <%= pb_rails("section_separator", props: { orientation: "vertical" }) if border %>
    <%= pb_rails("icon", props: { icon: icon }) %>
  <% else %>
    <%= pb_rails("icon", props: { icon: icon }) %>
    <%= pb_rails("section_separator", props: { orientation: "vertical" }) if border %>
    <%= content %>
  <% end %>
<% end %>
