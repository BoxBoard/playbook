<%= content_tag(:div,
    align: object.align,
    id: object.id,
    data: object.data,
    class: object.classname) do %>
      <%= pb_rails("body", props: { text: object.format_time_string, color: "light" }) %>
      <%= pb_rails("caption", props: { text: object.format_timezone, color: "light" }) %>
<% end %>
