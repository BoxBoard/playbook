<div class="container mt-5 pt-5">
  <!-- <a class="logo large" href="/"><%= image_tag("app_logo.svg") %></a> -->

  <div class="row">
    <div class="col-md-6 col-md-offset-3">


      <h2 class="text-ink">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Power Email" %><br />
          <%= f.email_field :email, placeholder: "youremail@powerhrg.com", autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Nitro Password" %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              Remember Me
            <% end %>
          </div>
        <% end -%>

        <div class="actions mt-4 mb-5 ">
          <%= f.submit "Log in", class: 'btn btn-lg btn-power-navy full' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
