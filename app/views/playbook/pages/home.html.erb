  <%= pb_rails("flex", props: { classname: "text-blob", horizontal: "right" } ) do %>
    <%= pb_rails("flex/flex_item", props: { fixed_size: "500px", margin_top: "xl" }) do %>
      <%= pb_rails("title", props: { margin_bottom: "md", text: "Designed & Built for Power’s Designers and Developers:", tag: "h2", size: 2 }) %>
