<%= pb_rails("textarea",
    props: {
        input_id: "few_rows",
        label: "Rows",
        rows: 1,
        input_options: {
            placeholder: "1 Row",
        }
    }
) %>

<br>

<%= pb_rails("textarea",
    props: {
        label: "Disabled",
        input_options: {
            disabled: true,
            name: "disabled",
            value: "overwriting-value",
        }
    }
) %>

<br>

<%= pb_rails("textarea",
    props: {
        label: "Min & Max Character Length",
        input_options: {
            maxlength: 10,
            minlength: 5,
            name: "minmax",
            placeholder: "This has a min-length of 5 and a max-length of 10 characters.",
        }
    }
) %>

<br>

<%= pb_rails("textarea",
    props: {
        id: "required",
        input_id: "required-text",
        label: "Required",
        input_options: {
            name: "required",
            placeholder: "This textarea is required.",
            required: true
        }
    }
) %>
