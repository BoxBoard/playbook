<%= content_tag(:div,
    aria: object.aria,
    data: object.data,
    id: object.id) do %>
    <% if object.image_url.present? %>
      <%= pb_rails( "image", props: { url: object.image_url, classname: object.classname }) %>
    <% else %>
    <%= tag(:div,
      class: object.classname_without_image) %>
    <% end %>
    <% if object.children.present? %>
      <%= capture(&object.children) %>
    <% end %>
  <% end %>

