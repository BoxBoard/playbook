<!--
  Any instance variables (@page, @total_items, @per_page) should be set in the controller by
  will_paginate or another pagination gem and are only used here for demo purposes.
-->

<% @page = request.params[:page].to_i.nonzero? || 1 %>
<% @total_items = 769 %>
<% @per_page = 25 %>

<%= pb_rails("pagination",
  props: {
    variant: "expanded",
    target_page: @page,
    total_items: @total_items,
    per_page: @per_page,
  })%>