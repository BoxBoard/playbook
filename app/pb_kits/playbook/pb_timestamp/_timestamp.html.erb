<%= content_tag(:div,
    id: object.id,
    data: object.data,
    class: object.classname) do %>

    <% if object.show_date %>
      <%= pb_rails("caption", props: { text: object.format_datetime_string, size: 'xs' }) %>
    <% else %>
      <%= pb_rails("caption", props: { text: object.format_time_string, size: 'xs' }) %>
    <% end %>
<% end %>
